<?xml version="1.0"?>
<config>
	<sections>
		<unloq_login translate="label" module="login">
			<label>UNLOQ login</label>
			<tab>service</tab>
			<frontend_type>text</frontend_type>
			<sort_order>500</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<status translate="label">
					<label>Status</label>
					<comment>
						You can disable or enable the UNLOQ plugin at any time.
					</comment>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active>
							<label>Enabled</label>
							<frontend_type>radios</frontend_type>
							<sort_order>4</sort_order>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<installed>

						</installed>
					</fields>
				</status>
				<api translate="label">
					<label>Setup</label>
					<comment>
						<![CDATA[
							<p>
								<h3>Welcome!</h3>
								If you haven't created an UNLOQ account, please do so <a href="https://account.unloq.io" target="_blank">here.</a>.
							</p>
							<p>
							<b>Steps for enabling the UNLOQ plugin on this website:</b><br/>
							1. Login to UNLOQ<br/>
							2. Create and verify your domain <br/>
							3. Create an application with this domain <br/>
							4. Configure the application <br/>
							5. Enter the API Key and API Secret of your app bellow.
							</p>
							<br/>
						]]>
					</comment>
					<frontend_type>text</frontend_type>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<key>
							<label>Application API Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</key>
						<secret>
							<label>Application API Secret</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</secret>
						<theme>
							<label>Plugin theme</label>
							<frontend_type>select</frontend_type>
							<source_model>login/options::themes</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</theme>
					</fields>
				</api>
			</groups>
		</unloq_login>
	</sections>
</config>